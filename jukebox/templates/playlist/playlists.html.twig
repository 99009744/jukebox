{% extends 'base.html.twig' %}

{% block title %}Hello PlaylistController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="w-4/5 m-auto text-center">
    <div class="py-12 border-b border-gray-200">
        <h1 class="text-6xl pt-12 pb-8">
            My playlists
        </h1>
        <div class="w-4/5 mx-auto py-15 ">
        <!-- Review Item -->
        {% if playlists is not empty %}
            {% for playlist in playlists %}
                <div class="flex mb-3 gap-5 w-2/3 mx-auto py-15 border-b border-black">
                    <div class="w-2/4">
                        <h2 class="text-gray-700 font-bold text-2xl py-2">
                            {{ playlist.name|capitalize }}
                        </h2>
                    </div>
                    <div class="w-1/4 m-4">
                        <a href="/myPlaylist/{{ playlist.id }}" class=" uppercase border border-gray-600 bg-gray-600 text-white text-lg py-3 px-3 rounded transition hover:bg-gray-100 hover:text-black">
                            Show more
                        </a>
                    </div>
                </div>
            {% endfor %}
        
        {% endif %}
        </div> 
    </div>
</div>
{% endblock %}
